                        </table>

                        {{/if}}
                        <h3 class="section__subtitle">
                            Example
                        </h3>
                        {{#each this.example}}
                        <div class="section__code-wrapper example">
                            <pre>
                                <span>{{this.code}}</span>
                            </pre>
                        </div>
                        {{/each}}
                        {{#if (isDefined this.require)}}
                        <h3 class="section__subtitle">
                            Dependencias
                        </h3>
                        {{#each this.require}}
                        <li class="section__require">
                            <span>
                                [{{this.type}}]
                            </span>
                            <span>
                                {{this.name}}
                            </span>
                        </li>
                        {{/each}}
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>

        </main>

    </div>
    <script src="scripts/script.js"></script>
</body>

